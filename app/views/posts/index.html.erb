<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <% if user_signed_in? %>
     <p><em>Posted by: <%= post.user.name %></em></p>
    <% end %>
    <% if post.user == current_user %>
        <a href="<%= edit_post_path(post) %>">Edit</a> 
    <% end %>
  </div>
<% end %>

<a href="<%= new_post_path %>">Create New Post</a>

<% if user_signed_in? %>
    <%= button_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>




